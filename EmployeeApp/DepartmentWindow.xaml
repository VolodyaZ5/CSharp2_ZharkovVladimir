<Window x:Class="EmployeeApp.DepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeApp"
        mc:Ignorable="d"
        Title="Отдел" Height="500" Width="380" 
        MinHeight="500" MinWidth="380" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <Label x:Name="lblNameOfDepartment" Content="Название отдела:" FontSize="18"/>
            <TextBox x:Name="txtNameOfDepartment" Height="25"/>

            <Label x:Name="lblActivity" Content="Деятельность:" FontSize="18"/>
            <TextBox x:Name="txtActivity" Height="25"/>

            <Button x:Name="btnAddDepartment" Content="Добавить отдел" Height="33"
                    FontSize="18" Margin="0 15 0 15"/>

            <ListBox x:Name="lstDepartment" Height="210" SelectionMode="Single"/>

        </StackPanel>
    </Grid>
</Window>
