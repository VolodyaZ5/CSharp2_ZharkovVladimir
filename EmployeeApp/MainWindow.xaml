<Window x:Class="EmployeeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeApp"
        mc:Ignorable="d"
        Title="Отдел кадров" Height="250" Width="400" WindowStartupLocation="CenterScreen" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnEmployees" Content="Сотрудники" Height="50" Width="150"
                Grid.Column="0" FontSize="18" Click="btnEmployees_Click"/>
        <Button x:Name="btnDepartments" Content="Отделы" Height="50" Width="150"
                Grid.Column="1" FontSize="18" Click="btnDepartments_Click"/>
    </Grid>
</Window>
